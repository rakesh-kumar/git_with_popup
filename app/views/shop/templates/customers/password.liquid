<div id="template">
  
  {% if response_state == 'account_declined' %}
    
    <p>You have rejected invitations account activation.</p>
    
    <div class="action_bottom">
      <span class="note"><a href="{{ shop.url }}">Return to shop</a></span>
    </div>
    
  {% elsif response_state == 'invalid_token' %}
  
    <p>Invitation code is invalid or has expired.</p>

    <div class="action_bottom">
      <a href="/account/login?recover" class="btn" id="badtoken">Apply for a new code</a>
      <span class="note">or <a href="{{ shop.url }}">Return to shop</a></span>
    </div>
  
  {% elsif response_state == 'activate_account' %}
  
    {% comment %} Customer Account activation form {% endcomment %}
    <div class="template_header">
      <h2 class="title">Account Activation</h2>
      <p class="note">Enter the password to activate the account</p>
    </div>
    {% form 'activate_customer_password' %}
      <div id="password" class="clearfix large_form">
        <label class="large" for="password">Password</label>
        <input type="password" value="" name="customer[password]" id="customer_password" class="large password" size="16" />
      </div>
      <div id="password_confirm" class="clearfix large_form">
        <label class="large" for="password_confirmation">Confirm password</label>
        <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="large password" size="16" />
      </div>
      <div class="action_bottom">
        <input class="btn" type="submit" value="Account Activation" />
        <span class="note">Or</span>
        <input type="submit" class="cancel" name="decline" id="customer_decline" value="Reject an invitation" />
      </div>
    {% endform %}
    
  {% elsif response_state == 'reset_password' %}
  
    {% comment %} Reset Password Form {% endcomment %}  
    <div class="template_header">
      <h2 class="title">Reset the account password</h2>
      <p class="note">Please enter your new password {{ email }}</p>
    </div>
    {% form 'reset_customer_password' %}
      <div id="password" class="clearfix large_form">
        <label class="large" for="password">Password</label>
        <input type="password" value="" name="customer[password]" id="customer_password" class="large password" size="16" />
      </div>
      <div id="password_confirm" class="clearfix large_form">
        <label class="large" for="password_confirmation">Confirm password</label>
        <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="large password" size="16" />
      </div>
      <div class="action_bottom">
        <input class="btn" type="submit" value="Reset Password" />
      </div>
    {% endform %}
  
  {% endif %}
  
</div>
