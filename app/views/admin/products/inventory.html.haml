.cl(style="margin-top: 52px")
  %table#product-table.standard-table(cellpadding="0" cellspacing="0")
    %thead
      %tr
        %th.nosort(style="width: 12px; text-align: center !important") Â 
        %th#product-col.sortcol(style="padding-left: 3px;min-width: 150px") Goods style
        %th.sortcol SKU
        %th.nosort(style="width: 175px") Inventory Policy
        %th.sortcol.number.sortasc(style="text-align: center;padding-right: 25px !important") Extant
    %tbody
      -@product_variants.each do |variant|
        %tr.variant
          %td=image_tag 'other/no-image-thumb.gif'
          %td
            =link_to product_path(variant.product) do
              =variant.product.title
              %br/
              %strong.highlight(style="color: #000")=variant.options.join(' / ')
          %td=variant.sku
          %td
            %span.hint=variant.inventory_policy_name
          %td(style="text-align:center;")
            %span(style="font-size: 18px")
              %span=variant.inventory_quantity
