#payment_alipay.payment-service-provider
  %table
    %tr
      %td.fl(style="padding:20px 10px 20px 20px;width:225px")
        =link_to image_tag('admin/payments/alipay.png'), 'https://b.alipay.com/order/productSign.htm?action=newsign&productId=2011011904422299', title: 'Application', target: '_blank'
      %td
        %table.desc
          %tr
            %td.r Payment:
            %td.meta
              %strong Online Payment-Paypal
          %tr
            %td.r Description:
            %td.meta==#{link_to 'Paypal', 'http://www.alipay.com'}Is committed to providing security for the Chinese e-commerce、Convenient、Personalized online payment solutions
  %dl.cl.sst(style="padding:0px; margin-bottom: 0; border-top: 1px solid #ddd")
    %dd.payment_select.hide(style="margin:0; padding-bottom: 10px")
      %p.gateway-select(style="padding-top:10px; padding-left:10px")
        %select.gateway-id(name="enabled_gateway")
          %option(value="0") Do not use Paypal
          %option(value="1") Alipay
    %dd.hide.activate_payment_provider(style="padding: 10px 10px 5px 10px")
      .fr
        %a.destroy(href="#")=image_tag 'admin/icons/trash.gif'
      Currently in use:
      %strong Paypal instant transfer service
      %span.warn=link_to w('edit'), '#', class: :payment_edit
    %dd.account_payment_provider.nsb(style="display:none;border-top: 1px solid #ddd;")
      %form(action="#" onsubmit="return false")
        .group-fields
          %table
            %tr
              %td.payment-gateway-form(style="vertical-align: top; padding: 20px 20px 20px 0px; width: 180px")
              %td.provider-info
                %div
                  %p.note
                    %strong
                      Please provide your
                      %a(href="http://www.alipay.com" target="gateway") Paypal
                      Account collaborators identity ID(account)、Transaction Security Code(key)And account(email),If there is no，Please log in to your
                      %a(href="https://b.alipay.com/order/productDetail.htm?productId=2011060800327555" target="gateway") Paypal Merchant Services
                      Conduct apply
        / .group-fields
        .group-actions
          %input.btn(name="commit" type="submit" value="Save")
          =w('or')
          =link_to w('cancel'), '#', class: 'cancel'
          / .group-actions

  %script(type="text/x-handlebars-template")
    .sb
      %label(for="payment_alipay_account") Collaborators identity ID
      %p.credential
        %input#payment_alipay_account(autocomplete="off" name="account" size="30" type="text" value="{{account}}")
    .sb
      %label(for="payment_alipay_key") Transaction Security Code
      %p.credential
        %input#payment_alipay_key(autocomplete="off" name="key" size="30" type="password" value="{{key}}")
    .sb
      %label(for="payment_alipay_email") Account number
      %p.credential
        %input#payment_alipay_email(autocomplete="off" name="email" size="30" type="text" value="{{email}}")
    .sb
      %label(for="payment_alipay_service") Interface Type
      %p.credential
        %select#payment_alipay_service(name="service")=options_for_select alipay_service_types
        %input(name="payment_type_id" type="hidden" value="1")
