%script(id="show-custom-payment-item" type="text/html")
  %dl
    %dd(style= "padding: 10px 10px 5px 10px" id= "activate_manual_payment_gateway_{{id}}")
      %a.fr.destroy
        =image_tag 'admin/icons/trash.gif'
      =t :payment
      %strong {{ name }}
      %a(href='#' class='edit-custom-payment') 
        =t :editor
    %dd.nsb(style= "display:none; border-top: 1px solid #ddd" id= "account_manual_payment_gateway_{{ id }}")
      %form(accept-charset= "UTF-8" action = "#" method= "post" id="custom-payment" onsubmit="return false" )
        .group-fields
          .sb
            %label(for= "name_manual_payment_gateway_{{id}}") Mode:
            %p.credential
              %input(name= "payment[name]" size= "30" type= "text" value= "{{ name }}")
          .sb
            %label(for= "message_manual_payment_gateway_{{ id }}")
              %span.hint When a customer checkoutï¼ŒThe following tips will be presented to the customer
            %p.credential
              %textarea(cols= "40" name= "payment[message]" rows= "10" )
                {{ message}}
        .group-actions
          %input.btn.submit(name= "commit" type= "submit" value= "Save")
          Or
          %a(href= "#" class= 'cancel') Cancel
